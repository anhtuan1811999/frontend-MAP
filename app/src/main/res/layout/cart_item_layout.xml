<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:replace="android:theme"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="0.2dp"
    android:layout_marginBottom="0.2dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:background="#FDF7C0"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/img_item"
            android:src="@drawable/icons_image"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="135dp"

            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_itemName"
                android:text="Áo khoác"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_itemSize"
                android:text="Size: L"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btn_decreaseItem"
                android:layout_gravity="center_vertical"
                android:text="-"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tv_quantifyCartItem"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:text="1"
                style="@style/Widget.AppCompat.EditText"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/btn_increaseItem"
                android:layout_gravity="center_vertical"
                android:text="+"
                android:textSize="15sp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>